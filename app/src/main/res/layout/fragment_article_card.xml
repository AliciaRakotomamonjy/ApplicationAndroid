<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/articleCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    tools:context=".ArticleCardFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/articleCardImage"
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:maxHeight="150dp"
            tools:src="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/articleCardTitre"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="clip_vertical"
                    android:text="TextView"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/articleCardDate"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_light"
                    android:text="TextView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/articleCardBouton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/marron"
                    android:backgroundTint="@color/marron"
                    android:gravity="center"
                    android:text="@string/boutonVoirDetails" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>