<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/articleCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:padding="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    tools:context=".ArticleCardFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/articleCardImage"
            android:layout_width="match_parent"
            android:layout_height="249dp"
            android:maxHeight="150dp"
            tools:src="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <Button
                    android:id="@+id/articleCardBouton"
                    android:layout_width="75dp"
                    android:layout_height="35dp"
                    android:background="@color/marron"
                    android:backgroundTint="@color/marron"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:text="@string/boutonVoirDetails"
                    android:textSize="10sp"
                    app:cornerRadius="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/articleCardTitre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pacifico"
                    android:gravity="clip_vertical|center_vertical"
                    android:text="TextView"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/articleCardDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_light"
                    android:text="TextView" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>