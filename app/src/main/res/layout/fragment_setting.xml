<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.setting.SettingFragment">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:checked="false"
        android:contentDescription="Active ou désactive le mode sombre"
        android:paddingStart="15dp"
        android:text="Mode sombre"
        android:textOff="Désactivé"
        android:textOn="Activé"
        android:textSize="20sp"
        android:thumbTint="@color/white"
        android:trackTint="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_constraintEnd_toEndOf="parent"
        tools:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/switch1"
        android:layout_marginStart="8dp"
        android:paddingStart="12dp"
        android:text="Active ou désactive le mode sombre"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/switch1"
        app:layout_constraintTop_toBottomOf="@id/switch1" />

</androidx.constraintlayout.widget.ConstraintLayout>
